<main>
    <div class="container-fluid m-3">
        <h1>CARDS</h1>
        {{#if allCards}}
            {{#each allCards}}
            <div class="card p-1 m-4" style="width: 50rem;">
                <div class="card-header">Prompt: {{cardPrompt}}</div>
                <div class="card-body">
                    <div class="card-text">Answer: {{cardAnswer}}</div>
                </div>
                <div class="card-footer">
                    <a href="/{{parentTopic}}/cards/{{_id}}" class="btn btn-primary">View this card</a>
                    &emsp;&emsp;
                    <a href="/{{parentTopic}}/middle" class="btn btn-primary">To Parent Topic</a>
                </div>
            </div>
            {{/each}}
        {{else}}
            <h3>There are no cards in this topic</h3>
        {{/if}}
    </div>
</main>
