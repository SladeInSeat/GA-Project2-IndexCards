<main>
    <div class="showUserContainer">
        <div class="userTitle">
            <form method="POST" action="/{{user._id}}/editUser?_method=PATCH">
                <input type="text" name="userName" id="username" value={{user.userName}}>
                <label for="username">Enter new User Name here</label>
                <input type="submit" value="Submit">
            </form>
            <form method="POST" action="/{{user._id}}/editUser?_method=DELETE">
                <input type="submit" value="Delete User">
            </form>
        </div>
    </div>
    <a href="/{{user._id}}">Back to User Page</a>
    <a href="/">Back to Landing Page</a>
    <a href="/showUsers">Show Existing Users</a>
</main>