<main>
    <div class="container-fluid m-3">
        <h3>Edit User</h3>
        <div class="card p-1 m-4" style="width: 50rem;">
            <div class="card-header">User Name: {{user.userName}}
            </div>
            <div class="card-body">
                <form method="POST" action="/{{user._id}}/editUser?_method=PATCH">
                    <label for="username">New User Name</label>
                    <input type="text" name="userName" id="username" value="{{user.userName}}">
                    <br>
                    <input type="submit" class="btn btn-primary" value="Submit">
                </form>
            </div>
            <div class="card-footer">
                <form method="POST" action="/{{user._id}}/editUser?_method=DELETE">
                    <input type="submit" class="btn btn-primary" value="Delete User">
                </form>
            </div>
        </div>
    </div>
</main>